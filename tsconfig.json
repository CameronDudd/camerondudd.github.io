{
  "include": ["src/**/*", "src/**/*.svelte"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "lib/*": ["src/lib/*"]
    },
    "plugins": [
      {
        "name": "typescript-svelte-plugin"
      }
    ]
  }
}
